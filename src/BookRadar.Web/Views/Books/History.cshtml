@model IReadOnlyList<BookRadar.Web.ViewModels.History.SearchHistoryViewModel>
@{
    ViewData["Title"] = "Historial de búsquedas";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Historial de búsquedas</h1>
    <div class="d-flex gap-2">
        <a asp-action="Search" class="btn btn-outline-secondary btn-icon">◀️ <span>Volver a buscar</span></a>
    </div>
</div>

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">Aún no hay búsquedas registradas. Realiza tu primera búsqueda en la pestaña “Búsqueda”.</div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                @await Html.PartialAsync("_HistoryTablePartial", Model)
            </div>
            <div class="small text-muted mt-2">Registros mostrados: @Model.Count</div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/history.js" asp-append-version="true"></script>
}
