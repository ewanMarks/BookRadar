<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BookRadar</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Books" asp-action="Search">BookRadar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav id="topNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Books" asp-action="Search">Búsqueda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Books" asp-action="History">Historial</a>
                    </li>
                </ul>
                <span class="navbar-text small opacity-75">Prueba técnica · MVC + Razor</span>
            </nav>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 mt-4 bg-white">
        <div class="container small text-muted">
            &copy; @DateTime.Now.Year · BookRadar
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/alerts.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_SwalAlertsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>
